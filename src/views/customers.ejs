<% include partials/_header %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>My Address</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                  <%if (data) {%>
                    <% for(var i=0; i< data.length; i++){%>
                        <tr>
                            <td><%=(i+1)%></td>
                            <td><%=data[i].FullName%></td>
                            <td><%=data[i].MyAddress%></td>
                            <td><%=data[i].Phone%></td>
                            <td>
                                <a type="submit" class="btn btn-danger" href="/delete/<%=data[i].Id%>">Delete</a>
                                <a type="submit" class="btn btn-warning" href="/update/<%=data[i].Id%>">Update</a>
                            </td>
                        </tr>
                    <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
           <div class="card">
               <div class="card-header">
                   <h1>New Customer</h1>
               </div>
               <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="FullName" placeholder="Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="MyAddress" placeholder="Address" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" name="Phone" placeholder="Phone" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-info">
                            Save Customer
                        </button>
                        </form>
               </div>
           </div>
        </div>
    </div>
</div>

<%include partials/_footer %>